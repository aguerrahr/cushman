@{
    ViewBag.Title = "GruposMercados";

}
@section headtag
{




    @*Plugin DataTables*@
    @*CSS*@
    @Styles.Render("~/Content/datatables/datatables.min.css")
    @*Scripts*@
    @Scripts.Render("~/Scripts/datatables/datatables.min.js")

    <script type="module" src="@Url.Content("~/Scripts/config.js")"></script>

    <script src="@Url.Content("~/Scripts/cboClasificacion.js")" type="text/javascript"></script>
    <script type="module" src="@Url.Content("~/Scripts/AgrupaMercados.js")" type="text/javascript"></script>


    <script src="@Url.Content("~/Scripts/jquery.msgBox.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/msgBoxLight.css")" rel="stylesheet" type="text/css" />
      

}

<div class="container">
    <div class="row mt-1">
        <div class="col-sm-12">
            <div class="card  bg-primary bg-opacity-10">
                <div class="card-header bg-primary bg-opacity-75 text-white fw-bold">
                    Catálogo Mercados Agrupados
                </div>
                <div class="card-body">
                    <div class="shadow p-3 mb-2 bg-body rounded">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-floating mt-1">
                                    <select class="form-select" id="cd_mercado_combo" aria-label="Estado">
                                        <option value=""></option>
                                    </select>
                                    <label for="cd_mercado_combo">@wr_anit_cushman_one.Resources.rscIdioma.Mercado</label>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-start mt-1">
                            <div class="col-sm-2">
                                <a href="javascript:void(0)" class="btn btn-success" id="create-new-reg"><i class="fa fa-plus-circle"></i> Agregar registro</a>
                            </div>
                        </div>
                        <div class="row mt-1">
                            <table id="grdDatos" class="table table-striped table-hover table-bordered border-primary">
                                <thead class="table-primary bg-opacity-25 text-center">
                                    <tr id="row_head_grdDatos"></tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            @*Modal para el CRUD*@
            <div class="modal fade" id="ajax-crud-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="ajax-crud-modalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="rowCrudModal"></h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="rowForm" name="rowForm" class="form-horizontal">
                                @Html.AntiForgeryToken()
                                @*<input type="hidden" name="cd_grupo" id="cd_grupo">*@
                                <input type="hidden" name="cd_mercado" id="cd_mercado">
                                <div class="form-floating mt-5">
                                    <select class="form-select" name="cd_estado" id="cd_estado" aria-label="Estado">
                                        <option value="0"></option>
                                    </select>
                                    <label for="cd_estado">@wr_anit_cushman_one.Resources.rscIdioma.Estado</label>
                                </div>
                                <div class="form-floating mt-5">
                                    <select class="form-select" name="cd_municipio" id="cd_municipio" aria-label="Municipio">
                                        <option value=""></option>
                                    </select>
                                    <label for="cd_municipio">@wr_anit_cushman_one.Resources.rscIdioma.Municipio</label>
                                </div>
                            </form>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                            <button type="button" class="btn btn-primary GurdarMercado"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar Cambios</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        div.msgBoxBackGroundAjax {
            top: 0;
            left: 0;
            position: absolute;
            padding: 0;
            margin: 0;
            width: 100%;
            height: 100%;
            background-color: #000000;
            opacity: 0.8;
            z-index: 50001;
        }

        #div-dl-im {
            position: fixed;
            z-index: 5000;
            left: 40%;
            width: 450px;
            height: 250px;
            text-align: center;
        }

        #div-dl-im p {
            margin: 5%;
            font-weight: bold;
            color: #ffffff;
        }
    </style>

    <script type="text/javascript">


    </script>
}