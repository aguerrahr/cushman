@model IEnumerable<Model.Rol>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<div class="table-responsive container modal-content">
    <div class="panel-heading ">
        <h3 class="text-center active panel-title well"><strong>Roles</strong></h3>
    </div>

    @using (Html.BeginForm("Index", "Rol", FormMethod.Get))
    {
        <p>
            Buscar por Rol: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Buscar" class="btn btn-danger btn-md" />
            @Html.ActionLink("Nuevo Registro", "Create", "Rol", new { @class = "btn btn-danger btn-md" })
            <a class="btn btn-danger" href="~/Rol/Index" role="button">Recargar</a>
        </p>
    }

    <table class="table  table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "glyphicon glyphicon-edit" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.id }, new { @class = "glyphicon glyphicon-list-alt" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "glyphicon glyphicon-trash" })
                </td>
            </tr>
        }

    </table>
