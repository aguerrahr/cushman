@model wr_anit_cushman_one.Models.tsg047_brokers

@{
    ViewBag.Title = "Editar Broker";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row mt-3">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <div class="card  bg-primary bg-opacity-10">
                <div class="card-header bg-primary bg-opacity-75 text-white fw-bold">
                    Editar Area
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.cd_broker)
                        </div>
                        <div class="col-sm-12 text-center">
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.nb_broker, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nb_broker, "", new { @class = "text-danger" })
                                <label for="floatingInput" class="fw-bold text-center">@wr_anit_cushman_one.Resources.rscIdioma.Nombre</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.nb_puesto, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nb_puesto, "", new { @class = "text-danger" })
                                <label for="floatingInput" class="fw-bold text-center">@wr_anit_cushman_one.Resources.rscIdioma.Puesto</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.nu_telefono, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nu_telefono, "", new { @class = "text-danger" })
                                <label for="floatingInput" class="fw-bold text-center">@wr_anit_cushman_one.Resources.rscIdioma.Telefono</label>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="card-footer text-center">
                    <input type="submit" value="Guardar" class="btn btn-danger" />
                    @Html.ActionLink("Regresar a la Lista", "Index", "Brokers", new { @class = "btn btn-danger btn-block" })
                </div>
            </div>
        </div>
        <div class="col-sm-4"></div>
    </div>


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

